{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/decision_page_payload.schema.json",
  "type": "object",
  "required": ["case", "decision_brief", "evidence_journal", "run_record", "artifacts"],
  "properties": {
    "case": {
      "type": "object",
      "required": ["case_id", "case_type", "created_at", "title", "status", "inputs"],
      "properties": {
        "case_id": { "type": "string" },
        "case_type": { "type": "string" },
        "created_at": { "type": "string" },
        "updated_at": { "type": "string" },
        "title": { "type": "string" },
        "status": { "type": "string", "enum": ["draft", "running", "completed", "needs_input", "failed"] },
        "user_context": {
          "type": "object",
          "properties": {
            "user_id": { "type": "string" },
            "timezone": { "type": "string" }
          },
          "additionalProperties": true
        },
        "inputs": { "type": "object" }
      },
      "additionalProperties": true
    },
    "decision_brief": {
      "type": "object",
      "required": ["brief_type", "version", "created_at", "job_title", "company", "verdict", "confidence", "next_actions", "evidence_index"],
      "properties": {
        "brief_type": { "type": "string" },
        "version": { "type": "integer", "minimum": 1 },
        "created_at": { "type": "string" },
        "job_title": { "type": "string" },
        "company": { "type": "string" },
        "verdict": { "type": "string", "enum": ["apply", "consider", "skip", "unknown"] },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "confidence_notes": { "type": "array", "items": { "type": "string" } },
        "role_reality": { "type": "object" },
        "fit_assessment": { "type": "object" },
        "reasons_not_to_apply": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["statement", "evidence_ids", "certainty"],
            "properties": {
              "statement": { "type": "string" },
              "evidence_ids": { "type": "array", "items": { "type": "string" } },
              "certainty": { "type": "string", "enum": ["certain", "likely", "uncertain"] }
            },
            "additionalProperties": false
          }
        },
        "engagement_strategy": { "type": "object" },
        "positioning_angle": { "type": "object" },
        "next_actions": { "type": "array", "items": { "type": "string" } },
        "follow_up_questions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "question", "why_needed"],
            "properties": {
              "id": { "type": "string" },
              "question": { "type": "string" },
              "why_needed": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "research_plan": {
          "type": "object",
          "required": ["max_tasks", "tasks"],
          "properties": {
            "max_tasks": { "type": "integer", "minimum": 0 },
            "tasks": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "target", "pro_query", "con_query", "why", "source_hints"],
                "properties": {
                  "id": { "type": "string" },
                  "target": { "type": "string" },
                  "pro_query": { "type": "string" },
                  "con_query": { "type": "string" },
                  "why": { "type": "string" },
                  "source_hints": { "type": "array", "items": { "type": "string" } }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "evidence_index": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["evidence_id", "source_type"],
            "properties": {
              "evidence_id": { "type": "string" },
              "source_type": {
                "type": "string",
                "enum": ["user_resume", "user_profile", "job_description", "company_research", "tool_result"]
              },
              "source_uri": { "type": "string" },
              "chunk_id": { "type": "string" },
              "snippet": { "type": "string" },
              "hash": { "type": "string" },
              "retrieved_at": { "type": "string" },
              "tool_call_id": { "type": ["string", "null"] },
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
              "tags": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "evidence_journal": {
      "type": "object",
      "required": ["ledger_version", "created_at", "items"],
      "properties": {
        "ledger_version": { "type": "integer", "minimum": 1 },
        "created_at": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["evidence_id", "source_type", "snippet"],
            "properties": {
              "evidence_id": { "type": "string" },
              "source_type": {
                "type": "string",
                "enum": ["user_resume", "user_profile", "job_description", "company_research", "tool_result"]
              },
              "source_uri": { "type": ["string", "null"] },
              "chunk_id": { "type": ["string", "null"] },
              "snippet": { "type": "string" },
              "hash": { "type": ["string", "null"] },
              "retrieved_at": { "type": ["string", "null"] },
              "tool_call_id": { "type": ["string", "null"] },
              "confidence": { "type": ["number", "null"], "minimum": 0, "maximum": 1 },
              "tags": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": true
          }
        },
        "dedupe_notes": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "run_record": {
      "type": "object",
      "required": ["run_id", "created_at", "provider", "iterations", "model_calls", "totals"],
      "properties": {
        "run_id": { "type": "string" },
        "created_at": { "type": "string" },
        "ended_at": { "type": "string" },
        "provider": { "type": "string" },
        "prompt_bundle": { "type": "object" },
        "iterations": { "type": "integer", "minimum": 0 },
        "confidence_threshold": { "type": "number", "minimum": 0, "maximum": 1 },
        "repair_attempts": { "type": "integer", "minimum": 0 },
        "model_calls": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["step", "model", "latency_ms", "total_tokens"],
            "properties": {
              "step": { "type": "string" },
              "model": { "type": "string" },
              "latency_ms": { "type": "number", "minimum": 0 },
              "input_tokens": { "type": ["integer", "null"], "minimum": 0 },
              "output_tokens": { "type": ["integer", "null"], "minimum": 0 },
              "total_tokens": { "type": ["integer", "null"], "minimum": 0 },
              "estimated_cost_usd": { "type": ["number", "null"], "minimum": 0 },
              "cache_hit": { "type": ["boolean", "null"] },
              "error": { "type": ["string", "null"] }
            },
            "additionalProperties": true
          }
        },
        "totals": {
          "type": "object",
          "required": ["total_latency_ms", "total_tokens"],
          "properties": {
            "total_latency_ms": { "type": "number", "minimum": 0 },
            "total_tokens": { "type": "integer", "minimum": 0 },
            "estimated_cost_usd": { "type": ["number", "null"], "minimum": 0 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": true
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["artifact_id", "type", "format", "created_at", "title", "content"],
        "properties": {
          "artifact_id": { "type": "string" },
          "type": { "type": "string" },
          "format": { "type": "string" },
          "created_at": { "type": "string" },
          "title": { "type": "string" },
          "summary": { "type": "string" },
          "source_brief_version": { "type": ["integer", "null"], "minimum": 1 },
          "content": { "type": "string" },
          "sha256": { "type": "string" },
          "provenance": { "type": "object" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
